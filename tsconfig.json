{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@hopla-ui/core": ["./packages/core/src"],
      "@hopla-ui/react": ["./packages/react/src"],
      "@hopla-ui/icons": ["./packages/icons/src"],
      "@hopla-ui/system": ["./packages/system/src"],
      "@hopla-ui/utils": ["./packages/utils/src"]
    }
  },
  "include": ["packages/**/*", "docs/**/*"],
  "exclude": ["node_modules", "**/dist", "**/build"]
}
